<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="person"
            type="com.strv.graphql.entity.Person" />
        <!--<variable-->
            <!--name="playClickedListener"-->
            <!--type="com.strv.graphql.entity.PersonClickedListener"/>-->
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="0dp"
        android:layout_marginBottom="1dp"
        android:focusable="true">
        <!--android:onClick="@{() -> playClickedListener.onPlayClicked(play)}"-->

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_person"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                app:layout_constraintTop_toTopOf="parent"
                app:imageUrl="@{person.imageUrl}"

                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                tools:src="@color/cardview_dark_background" />

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_margin="16dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/image_person"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/image_person">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="@{person.name}"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        tools:text="Martin Roncka" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{person.birthDate}"
                        tools:text="12. 11. 1992" />

                </LinearLayout>

            </LinearLayout>


        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>

</layout>
